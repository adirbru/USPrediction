{
  "data": {
    "raw_video_dir": "dataset/raw/",
    "masked_video_dir": "dataset/masks/",
    "temp_dir": "./temp_frames"
  },
"augmentations":
  {
    "in_place_augmentations": ["resize", "quantize"],
    "enrichment_augmentations": ["random_resize_crop", "flip", "random_gamma", "speckle_noise"],
    "random_resize_crop_percent": 20,
    "resize_to": [240, 240],
    "random_gamma_range": [0.7, 1.5],
    "speckle_noise_std": 0.05
  },
  "split": {
    "train_ratio": 0.9,
    "random_seed": 42
  },
  "training": {
    "epochs": 10,
    "batch_size": 8,
    "learning_rate": 0.0001,
    "num_workers": 8
  },
  "model": {
    "checkpoint_path": "./best_unet.pth"
  }
}
